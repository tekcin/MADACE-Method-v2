{
  "name": "madace-method-v2",
  "version": "2.0.0-alpha",
  "private": true,
  "description": "MADACE-Method v2.0 - Methodology for AI-Driven Agile Collaboration Engine - Next.js full-stack implementation",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "test": "jest",
    "cleanup": "node scripts/cleanup-dev-servers.js",
    "cleanup:bash": "bash scripts/cleanup-dev-servers.sh",
    "verify-routes": "node scripts/verify-routes.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:clean": "npm run verify-routes && npm run cleanup && npm run dev & sleep 3 && npm run test:e2e",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "import-madace": "tsx scripts/import-madace-agents.ts",
    "import-madace-v3": "tsx scripts/import-madace-v3-agents.ts"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "@prisma/client": "^6.17.1",
    "commander": "14.0.1",
    "handlebars": "4.7.8",
    "js-yaml": "4.1.0",
    "next": "15.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "ws": "8.18.3",
    "zod": "4.1.12",
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "4.1.15",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/node": "22.18.11",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/ws": "8.18.1",
    "eslint": "9.38.0",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "10.1.8",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "path-browserify": "1.0.1",
    "playwright": "^1.56.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "prisma": "^6.17.1",
    "tailwindcss": "4.1.15",
    "ts-jest": "29.4.5",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  },
  "keywords": [
    "madace",
    "madace-method",
    "v2",
    "next.js",
    "typescript",
    "ai-agents",
    "workflow",
    "state-machine"
  ],
