# MADACE-Method v2.0 - NPM Configuration
#
# This file enforces exact version installation to prevent
# any version drift or mixed tech stack issues.

# Install exact versions only (no ^ or ~ ranges)
save-exact=true

# Use package-lock.json for reproducible builds
package-lock=true

# Strict engine matching
engine-strict=true

# Audit automatically (security)
audit=true

# Progress output
progress=true

# Log level
loglevel=warn
